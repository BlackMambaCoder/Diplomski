<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rasp_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.mqtttest.Activities.RaspConfigActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Get Raspberry's configuration settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetRaspConfigSettings" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:text="Period measuring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRaspPeriod" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etRaspPeriod" />

        <TextView
            android:text="Temperature treshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRaspTreshold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etRaspTreshold" />

        <Button
            android:text="Submit configuration settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRaspConfigSubmit" />
    </LinearLayout>
</RelativeLayout>
